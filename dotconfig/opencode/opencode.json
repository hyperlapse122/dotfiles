{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode"],
  "model": "openrouter/openai/gpt-5.2:extended",
  "small_model": "openrouter/mistralai/mistral-small-3.2-24b-instruct",
  "mcp": {
    "perplexity": {
      "type": "local",
      "enabled": false,
      "command": ["op", "run", "--", "npx", "-y", "@perplexity-ai/mcp-server"],
      "environment": {
        "PERPLEXITY_API_KEY": "op://Private/Perplexity AI/API Key"
      }
    },
    "tanstack": {
      "type": "remote",
      "enabled": true,
      "url": "https://tanstack.com/api/mcp"
    }
  },
  "provider": {
    "openrouter": {
      "models": {
        "google/gemini-3-pro-preview": {
          "name": "Gemini 3 Pro Preview"
        },
        "moonshotai/kimi-k2-thinking": {},
        "z-ai/glm-4.7": {},
        "mistralai/mistral-small-3.2-24b-instruct": {},
        "openai/gpt-5.2-codex": {}
      }
    }
  }
}
