{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["oh-my-opencode@latest", "opencode-wakatime"],
  "autoupdate": "notify",
  "provider": {},
  "lsp": {
    "biome": {
      "command": [
        "mise",
        "exec",
        "npm:@biomejs/biome",
        "--",
        "biome",
        "lsp-proxy"
      ],
      "extensions": [
        ".ts",
        ".tsx",
        ".js",
        ".jsx",
        ".cts",
        ".ctsx",
        ".cjs",
        ".cjsx",
        ".mts",
        ".mtsx",
        ".mjs",
        ".mjsx",
        ".json",
        ".css",
        ".scss",
        ".html",
        ".vue",
        ".svelte",
        ".json",
        ".yaml",
        ".yml",
        ".md",
        ".mdx"
      ]
    }
  }
}
