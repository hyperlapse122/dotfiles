{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "oh-my-opencode@latest",
    "opencode-anthropic-auth",
    "opencode-wakatime"
  ],
  "autoupdate": "notify",
  "provider": {},
  "lsp": {
    "biome": {
      "command": [
        "mise",
        "exec",
        "npm:@biomejs/biome",
        "--",
        "biome",
        "lsp-proxy"
      ],
      "extensions": [
        ".ts",
        ".tsx",
        ".js",
        ".jsx",
        ".cts",
        ".ctsx",
        ".cjs",
        ".cjsx",
        ".mts",
        ".mtsx",
        ".mjs",
        ".mjsx",
        ".json",
        ".css",
        ".scss",
        ".html",
        ".vue",
        ".svelte",
        ".json",
        ".yaml",
        ".yml",
        ".md",
        ".mdx"
      ]
    }
  },
  "server": {
    "port": 4096,
    "hostname": "0.0.0.0"
  },
  "permission": {
    "read": {
      "**/.env*.local": "ask",
      "**/.env*": "allow"
    }
  }
}
