{
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "biome.requireConfiguration": true,
    "biome.suggestInstallingGlobally": false,
    "chat.agent.maxRequests": 1000,
    "chat.mcp.gallery.enabled": true,
    "chat.tools.terminal.autoApprove": {
        "Move-Item": true
    },
    "containers.containerClient": "com.microsoft.visualstudio.containers.podman",
    "containers.orchestratorClient": "com.microsoft.visualstudio.orchestrators.podmancompose",
    "csharp.experimental.debug.hotReload": true,
    "dotnetAcquisitionExtension.existingDotnetPath": [
        "~/.local/share/mise/installs/dotnet/9.0.306/dotnet"
    ],
    "editor.aiStats.enabled": true,
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'JetBrains Mono', 'Droid Sans Mono', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.smoothScrolling": true,
    "editor.tabSize": 2,
    "files.autoSave": "onFocusChange",
    "files.enableTrash": false,
    "git.autofetch": true,
    "git.blame.editorDecoration.enabled": true,
    "git.confirmSync": false,
    "git.enableCommitSigning": true,
    "git.enableSmartCommit": true,
    "git.followTagsWhenSync": true,
    "git.replaceTagsWhenPull": true,
    "github.copilot.chat.agent.thinkingTool": true,
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {
            "text": "Use conventional commit message format."
        }
    ],
    "github.copilot.chat.languageContext.fix.typescript.enabled": true,
    "github.copilot.chat.languageContext.inline.typescript.enabled": true,
    "github.copilot.chat.languageContext.typescript.enabled": true,
    "github.copilot.chat.localeOverride": "ko",
    "github.copilot.nextEditSuggestions.enabled": true,
    "github.gitProtocol": "ssh",
    "githubPullRequests.codingAgent.promptForConfirmation": false,
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "gitlens.gitkraken.mcp.autoEnabled": false,
    "js/ts.implicitProjectConfig.checkJs": true,
    "js/ts.implicitProjectConfig.experimentalDecorators": true,
    "terminal.external.windowsExec": "pwsh.exe",
    "terminal.integrated.enableImages": true,
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.stickyScroll.enabled": false,
    "terminal.integrated.windowsUseConptyDll": true,
    "typescript.updateImportsOnFileMove.enabled": "never",
    "window.restoreWindows": "none"
}